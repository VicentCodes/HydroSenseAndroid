<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="customStyleChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@drawable/chip_background_color</item>
        <item name="android:textColor">@drawable/chip_text_color</item>
        <item name="chipStrokeColor">@drawable/corner_background_color</item>
        
    </style>

    <!-- res/values/styles.xml -->
    <!-- En styles.xml -->

    <!-- Estilo para cambiar el color de fondo del menú desplegable -->
    <style name="CustomDropDownMenu">
        <!-- Color de fondo del menú desplegable -->
        <item name="android:popupBackground">@color/background</item>
    </style>

    <!-- Estilo para cambiar el color del texto del adaptador -->
    <style name="CustomListItemStyle">
        <!-- Cambiar color del texto -->
        <item name="android:textColor">@color/white</item>
        <!-- Cambiar tamaño de texto si se necesita -->
        <item name="android:textSize">14sp</item>
    </style>



</resources>